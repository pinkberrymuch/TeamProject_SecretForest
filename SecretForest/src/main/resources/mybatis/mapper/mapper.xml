<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.project.DAO.memberDao">

<!-- 회원 가입 -->
<insert id="addMember" parameterType="com.project.Dto.memberDto">
 INSERT INTO USERS (USER_ID
				,USER_NAME
				,USER_PASSWORD
				,USER_EMAIL
				,USER_PHONE
				,USER_ADDRESS)
	VALUES(#{user_id},#{user_name},#{user_password},#{user_email},#{user_phone},#{user_address})			
</insert>

<!-- 로그인 -->
<select id="login" parameterType="com.project.Dto.memberDto" resultType="com.project.Dto.memberDto">
 SELECT USER_ID,USER_NAME,USER_PASSWORD,USER_EMAIL,USER_PHONE,USER_ADDRESS
  FROM USERS
  WHERE USER_ID=#{user_id} AND USER_PASSWORD=#{user_password}
</select>




</mapper>         